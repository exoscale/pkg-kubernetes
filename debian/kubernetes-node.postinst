#!/bin/sh

set -e

NAME="kube"
GROUP=$NAME
USER=$NAME
DATADIR="/var/lib/kubernetes"

case "$1" in
    configure)
        adduser --system --disabled-password --disabled-login --home $DATADIR \
                --no-create-home --quiet --force-badname --group $USER
        chown $USER:adm /var/log/kubernetes
        chown $USER:$GROUP $DATADIR
        ;;
esac

#DEBHELPER#

exit 0
